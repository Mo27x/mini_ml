\newcommand{\setupplease}[2]{
    \pagestyle{fancy}
    \fancyhf{} % clear existing header/footer

    \title{#1}
    \author{#2}

    \lhead{\leftmark}
    \rhead{\thepage}

    \makeatletter % start escaping chars like '@'
    \AtBeginDocument{
        \hypersetup{
            pdftitle = {\@title},
            pdfauthor = {\@author},
        }
    }
    \makeatother % end escaping of chars like '@'
}

